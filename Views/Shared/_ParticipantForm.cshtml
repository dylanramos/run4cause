@model run4cause.Models.Participant

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nickname" class="control-label"></label>
                <input asp-for="Nickname" class="form-control" />
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BibNumber" class="control-label"></label>
                <input asp-for="BibNumber" class="form-control" />
                <span asp-validation-for="BibNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsHandicapped" class="control-label"></label>
                <input asp-for="IsHandicapped" />
                <span asp-validation-for="IsHandicapped" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label> <br />
                <input type="radio" asp-for="Gender" value="Male" /> Male <br />
                <input type="radio" asp-for="Gender" value="Female" /> Female <br />
                <input type="radio" asp-for="Gender" value="Unspecified" checked/> Unspecified <br />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
