@model run4cause.Models.Participant

<div class="form-group">
    <label asp-for="LastName" class="control-label"></label>
    <input asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="FirstName" class="control-label"></label>
    <input asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Nickname" class="control-label"></label>
    <input asp-for="Nickname" class="form-control" />
    <span asp-validation-for="Nickname" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="BibNumber" class="control-label"></label>
    <input asp-for="BibNumber" class="form-control" />
    <span asp-validation-for="BibNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="IsHandicapped" class="control-label"></label>
    <input asp-for="IsHandicapped" />
    <span asp-validation-for="IsHandicapped" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Gender" class="control-label"></label> <br />
    <input type="radio" asp-for="Gender" value="Male" /> Male <br />
    <input type="radio" asp-for="Gender" value="Female" /> Female <br />
    <input type="radio" asp-for="Gender" value="Unspecified" checked/> Unspecified <br />
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Picture" class="control-label"></label><br />
    <input asp-for="Picture" accept="image/*" />
    <span asp-validation-for="Picture" class="text-danger"></span>
</div>
<input asp-for="PictureName" type="hidden" value="Default"/>
